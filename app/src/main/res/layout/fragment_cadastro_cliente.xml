<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="@font/sora_bold"
            android:text="@string/titulo_cadastro_clientes"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <Spinner
                                android:id="@+id/sp_tipo_pessoa_cadastro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="4dp"
                                android:padding="8dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_nome_fantasia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario"><![CDATA[


                                android:layout_height=
                                app:boxCornerRadiusBottomEnd=12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                ]]>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_nome_fantasia"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_nome_fantasia" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_cpf_cnpj"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_cpf_cnpj"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_cnpj" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_razao_social"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_razao_social" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_email_principal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_email_primario" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_email_secundario"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_email_secundario" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_endereco_principal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_endereco_principal" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_bairro_principal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_nome_bairo_principal" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_numero_principal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_numero_principal" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_endereco_entrega"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_endereco_secundario" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_bairro_entrega"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_nome_bairro_entrega" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_numero_entrega"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_numero_entrega" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_endereco_cobranca"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_endereco_cobranca" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_bairro_cobranca"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_nome_bairro_cobranca" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/verde_primario"
                                app:boxStrokeWidth="2dp"
                                app:endIconDrawable="@drawable/ic_edit_filled_18dp"
                                app:endIconMode="custom"
                                app:endIconTint="@color/verde_primario">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_cadastro_numero_cobranca"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sora"
                                    android:hint="@string/hint_cadastrar_numero_cobranca" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cadastrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/sora_semibold"
                        android:text="@string/salvar_cadastro_cliente"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/verde_secundario"
                        app:cornerRadius="12dp"
                        app:elevation="4dp"
                        app:icon="@drawable/ic_save_filled_24dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>